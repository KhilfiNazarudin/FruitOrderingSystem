@{
    @model FOS_L1_201945D.Models.AspNetUsers
}

<h3>Edit profile</h3>


<form asp-controller="Account" asp-action="EditProfile" method="post">

    <p>
        @Html.ValidationSummary()
        <label asp-for="Name" class="label">Name:</label>
        <input asp-for="Name" /> <br />

        <label asp-for="UserName" class="label">Username:</label>
        <input asp-for="UserName" /> <br />

        <label asp-for="Email" class="label">Email:</label>
        <input asp-for="Email" /> <br />

        <label asp-for="PhoneNumber" class="label">Phone Number:</label>
        <input asp-for="PhoneNumber" /> <br />


        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Update User Profile" />
        <input type="reset" value="Reset" />
    </p>

</form>
