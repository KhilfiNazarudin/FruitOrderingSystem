@{
    @model FOS_L1_201945D.Models.ViewModels.FruitVM
}
<h3>Edit the fruit</h3>

<form asp-controller="Fruit" asp-action="EditFruit" method="post">
    <p>
        @Html.ValidationSummary()

        <label asp-for=Fruit.Id class="label">Fruit Id:</label>
        <span>@Model.Fruit.Id</span> <br /><br />

        <label asp-for="Fruit.Name" class="label">Name: </label>
        <input required asp-for="Fruit.Name" />


        <br /><br />

        <label asp-for="Fruit.Country" class="label">Country: </label>
        <input required asp-for="Fruit.Country" />

        <br /><br />

        <label asp-for="Fruit.Price" class="label">Price: </label>
        <input required asp-for="Fruit.Price" />

        <br /><br />

        <label asp-for="Fruit.UnitOfMeasurement" class="label">Unit of measurement </label>
        <input required asp-for="Fruit.UnitOfMeasurement" />

        <br /><br />

        <label asp-for="Fruit.FruitCategory.Name" class="label">Category:</label>

        <select asp-for="Fruit.FruitCategoryId">
            @foreach (var g in Model.FruitCategories)
            {
                if (g.Id == Model.Fruit.FruitCategoryId)
                {
                    <option value=@g.Id selected="selected">@g.Name</option>
                }
                else
                {
                    <option value=@g.Id>@g.Name</option>
                }
            }

        </select>

        <br /><br />

        <input type="hidden" asp-for="Fruit.Id" />
        <input type="submit" name="update" value="Update Fruit" />
        <input type="reset" name="reset" value="Reset" />
    </p>
</form>