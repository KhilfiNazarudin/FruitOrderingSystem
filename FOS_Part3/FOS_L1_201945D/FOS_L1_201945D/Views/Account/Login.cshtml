@{
}

@model LoginVM
<h3>Login page</h3>

<form asp-controller="Account" asp-route-returnUrl="@ViewBag.ReturnUrl" asp-action="Login" method="post">
    <p>
        <label asp-for="@Model.Username" class="label">Username</label>
        <input asp-for="@Model.Username" />

        <label asp-for="@Model.Password" class="label">Password</label>
        <input asp-for="@Model.Password" />

        <label asp-for="@Model.RememberMe" class="label">Remember Me</label>
        <input asp-for="@Model.RememberMe" type="checkbox" />

        <input type="submit" name="update" value="Login" />
        <input type="reset" name="reset" value="Reset" />
    </p>
    

</form>